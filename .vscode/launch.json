{
    "configurations": [
        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "Invoke Lambda",
            "invokeTarget": {
                "target": "code",
                "lambdaHandler": "handler.lambda_handler",
                "projectRoot": "${workspaceFolder}/sam-api/functions/analyser_controller"
            },
            "lambda": {
                "runtime": "python3.9",
                "payload": {
                    "path": "${workspaceFolder}/sam-api/functions/analyser_controller/event.json"
                }
            }
        }
    ]
}